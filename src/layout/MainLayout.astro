---
/**
 * This Layout is for the general wrapper for the entire site.
 */
const { title } = Astro.props;
import { BASE_URL } from "../utils/constants";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/images/general/dpel-icon-black.svg"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{`${title}${Astro.url.pathname !== BASE_URL ? ` - DPEL` : ''}`}</title>
  </head>
  <body>
    <!-- Header bar -->
    <header id="top container">
      <div class="header-bar__top desktop:px-40 tablet:px-32 mobile-h:px-5 mobile-v:px-5">
        <a href="https://www.aswf.io/projects/">AN <span class="blue">/* ACADEMY SOFTWARE FOUNDATION</span> PROJECT</a>
      </div>
      <div class="header-bar__bottom flex items-center mobile-h:px-5 mobile-v:px-5">
        <a class="desktop:hidden tablet:hidden mobile-h:hidden mobile-v:inline-block" href="/"><img class="w-12" src="./images/general/dpel-icon-white.svg" /></a>
      </div>
    </header>
    <!-- Rest of the content -->
    <slot>Default Text</slot>
    <!-- Footer -->
    <footer id="bottom container">
      <div class="footer-bar desktop:px-40 tablet:px-32 mobile-h:px-5 mobile-v:px-5">
        <p> Copyright Â© ASWF Assets Repository a Series of LF Projects, LLC <br/>
        For website terms of use, trademark policy, and other project policies, please see <a href="https://lfprojects.org/"> https://lfprojects.org/. </a> <br/>
        To report a security vulnerability, please see our security guide on <a href="//github.com/AcademySoftwareFoundation/dpel-website/blob/main/SECURITY.md"><u>Github.</u></a>
        </p>
      </div>      
    </footer>
  </body>
</html>

<!-- CSS -->
<style>
  header{
    position: fixed;
    left: 0;
    z-index: 99999;
    position: relative;
    font-family: "Titillium Web", "Open Sans", sans-serif !important;
    font-weight: 100;
    font-size: 12px;
    color: #FFFFFF;
    letter-spacing: 1px;
  }

  .header-bar__top{
    background: #252525;
    height: 33px;
    display: flex;
    align-items: center;
  }

  .header-bar__top a{
    color: #FFFFFF !important;
  }
  .header-bar__top a:hover{
    color: #FFFFFF !imporant;
  }

  .header-bar__bottom{
    background-color: #000000;
    min-height: 50px;
  }

  footer{
    position: fixed;
    left: 0;
    z-index: 99999;
    position: relative;
    font-family: "Titillium Web", "Open Sans", sans-serif !important;
    font-weight: 100;
    font-size: 13px;
    color: #9d9d9d;
    letter-spacing: 1px;
  }

  .footer-bar{
    background-color: #292929;
    height: 130px;
    display: flex;
    justify-content: center;
    align-items: center;     
    text-align: center;  
    padding: 15px;
  }

  .footer-bar a{
    color: #31cad3 !important;
  }
  .footer-bar a:hover{
    color: #FFFFFF !important;
  }

  .blue {
    color: #31cad3 !important;
  }
</style>

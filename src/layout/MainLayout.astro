/** 
 * This Layout is for the general wrapper for the entire site.
 */
---

<html lang="en">
	<body>
		<!-- Header bar -->
		<header id="top container">
			<div class="header-bar__top desktop:px-40 tablet:px-32 mobile-h:px-5 mobile-v:px-5">
				<a href="https://www.aswf.io/projects/">AN <span class="blue">/* ACADEMY SOFTWARE FOUNDATION</span> PROJECT</a>
			</div>
			<div class="header-bar__bottom flex items-center  mobile-h:px-5 mobile-v:px-5">
				<a class="desktop:hidden tablet:hidden mobile-h:hidden mobile-v:inline-block" href="/"><img class="w-12" src="../../public/images/general/dpel-icon-white.svg" /></a>
			</div>
		</header>
		<!-- Rest of the content -->
		<slot>Default Text</slot>
	</body>
</html>

<!-- CSS -->
<style>
	header{
		position: fixed;
		left: 0;
		z-index: 99999;
		position: relative;
		font-family: "Titillium Web", "Open Sans", sans-serif !important;
		font-weight: 100;
		font-size: 12px;
		color: #FFFFFF;
		letter-spacing: 1px;
	}

	.header-bar__top{
		background: #252525;
		height: 33px;
		display: flex;
		align-items: center;
	}

	.header-bar__top a{
		color: #FFFFFF !important;
	}
	.header-bar__top a:hover{
		color: #FFFFFF !imporant;
	}

	.header-bar__bottom{
		background-color: #000000; 
		min-height: 50px;
	}

	.blue {
		color: #31cad3 !important;
	}
</style>
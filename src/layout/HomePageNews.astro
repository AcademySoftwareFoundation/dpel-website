---
import { getCollection } from 'astro:content';
import HomeCard from '../component/HomeCard.astro';

const newsContent = await getCollection('homecards');
---

<section class="news-section pb-16" aria-label="News">
  <div class="news-container flex-auto flex-column">
    <h2 class="pb-10">News</h2>
    <div
      class="news-cards grid gap-7 desktop:grid-cols-2 tablet:grid-cols-2 mobile-v:grid-cols-1 mobile-h:grid-cols-1"
    >
      {newsContent.map(({ data }) => <HomeCard {...data} />)}
    </div>
  </div>
</section>
